<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBaseColor"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.IntroNewConfirm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bkg_intro" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_logo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Confirm Backup"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tx_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:text="Verify your backup phrase or go back"
                android:textColor="#333"
                android:textSize="18dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tx_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENTER YOUR BACKUP PHRASE"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:textColor="#000" />

            <com.pulsar.android.components.EditComponent.EditSpacebar
                android:id="@+id/edit_tag_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_round_border_gray"
                android:focusedByDefault="false"
                android:minHeight="150dp"
                android:padding="15dp"
                app:delete_mode_bg="@drawable/bkg_word_del"
                app:input_layout="@layout/word_imput"
                app:tag_layout="@layout/word_tag" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_gradient"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="22dp" />
    </LinearLayout>

</ScrollView>